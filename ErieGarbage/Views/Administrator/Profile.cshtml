@model ErieGarbage.Models.Administrator

@{
    ViewBag.Title = "Profile";
    Layout = "_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Profile", "Administrator", FormMethod.Post))
{
    @Html.TextBoxFor(m => m.ProfileForm.Email, new
    {
        placeholder = "Username",
        type = "text",
        @readonly = true,
    })
    <br>
    @Html.TextBoxFor(m => m.ProfileForm.Password, new
    {
        placeholder = "Password",
        type = "password",
        pattern = "^((?=.*\\d)(?=.*[A-Z])(?=.*(_|\\W))(?!.*\\s).{8,50})$",
        title = "Password should contain at least one lowercase letter, uppercase letter, number, a special character, and be at least 8 characters long.",
    })

    @Html.TextBoxFor(m => m.ProfileForm.ConfirmPassword, new
    {
        placeholder = "Password",
        type = "password",
        pattern = "^((?=.*\\d)(?=.*[A-Z])(?=.*(_|\\W))(?!.*\\s).{8,50})$",
        title = "Password should contain at least one lowercase letter, uppercase letter, number, a special character, and be at least 8 characters long.",
    })
    <br>
    if (!string.IsNullOrEmpty(Model.ProfileForm.Error))
    {
        @(Model.ProfileForm.Error)
        @:<br/>
    }
    <input type="submit">
}

